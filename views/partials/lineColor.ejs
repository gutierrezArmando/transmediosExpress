<% colorStyle=color;
if(color === 'green')
     colorStyle='chartreuse';
if(color === 'peach')
     colorStyle='peachpuff';
if(color === 'blue')
     colorStyle='aqua';
%>
<div class="row">
    <div class="main-container">
        <div style="background-color: <%= colorStyle %>"></div>
        <div class="<%= align==='left'?'left-text': align==='right'?'right-text':'' %>"><%= string %></div>
    </div>
</div>